<h1>Listing movies</h1>

<%# link_to 'Let\'s Fetch Movie', controller: "movies", action:"fetch" %>

<br/>
<h3>Lets fetch movie!</h3>
<%= form_tag("movies/fetch", method: "get") do %>
  <%= label_tag(:cookie, "Cookie:") %>
  <%= text_field_tag(:cookie) %>
  <br/>
  <%= label_tag(:start_at, "Start at:") %>
  <%= text_field_tag(:start_at) %>
  <br/>
  <%= label_tag(:end_at, "End at:") %>
  <%= text_field_tag(:end_at) %>
  <br/>
  <%= submit_tag("Fetch!") %>
<% end %>

<br/>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Cn title</th>
      <th>Original title</th>
      <th>Rating</th>
      <th>Poster url</th>
      <th>Poster</th>
      <th>Subtype</th>
      <th>Pubyear</th>
      <th>Duration</th>
      <th>Imdb</th>
      <th>Summary</th>
      <th>E count</th>
      <th>E duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.cn_title %></td>
        <td><%= movie.original_title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.poster_url %></td>
        <td><%= movie.poster_id %></td>
        <td><%= movie.subtype %></td>
        <td><%= movie.pubyear %></td>
        <td><%= movie.duration %></td>
        <td><%= movie.imdb_id %></td>
        <td><%= movie.summary %></td>
        <td><%= movie.e_count %></td>
        <td><%= movie.e_duration %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
  <%= paginate @movies %>
</div>

<div>
<%= link_to 'New Movie', new_movie_path %>
</div>